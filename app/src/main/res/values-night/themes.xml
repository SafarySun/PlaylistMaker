<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/day_night</item>
        <item name="android:backdropColor">@color/day_night</item>
    </style>

    <style name="ImageCase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="SwitchTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_settings</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:checked">false</item>
        <item name="android:text">@string/night_theme</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/setting_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="TextSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/setting_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>