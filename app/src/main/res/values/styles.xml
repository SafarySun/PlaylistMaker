<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MenuButtons">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/day_night</item>
        <item name="iconTint">@color/day_night</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="updateButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/day_night</item>
        <item name="android:textColor">@color/update_text</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>


    </style>

    <style name="TextSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/setting_text_size19</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ImageCase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>

    </style>

    <style name="Boxframe">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_settings64</item>
    </style>


    <style name="SwitchTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_settings64</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:text">@string/night_theme</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textSize">@dimen/setting_text_size19</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ToolbarBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/standart_padding8</item>
    </style>

    <style name="ToolbarBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="tint">@color/day_night</item>
    </style>

    <style name="ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textColor">@color/day_night</item>
        <item name="android:textSize">@dimen/primary_text_size26</item>
    </style>


    <style name="EditTextStyle">
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/text_hint</item>

    </style>


    <style name="FrameStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="boxStrokeColor">@color/nofocus_grey_focuse_blue</item>
        <item name="android:letterSpacing">0.03</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/correction_padding4</item>
        <item name="boxCornerRadiusBottomStart">@dimen/correction_padding4</item>
        <item name="boxCornerRadiusTopEnd">@dimen/correction_padding4</item>
        <item name="boxCornerRadiusTopStart">@dimen/correction_padding4</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="hintTextColor">@color/YP_blue</item>
        <item name="android:textColorHint">@color/day_night</item>
    </style>

    <style name="InsideFrameStyle">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:imeOptions">actionDone|flagNoExtractUi</item>
    </style>

    <style name="LeftSort">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/YP_Text_Gray</item>
        <item name="android:layout_marginBottom">@dimen/padding_for_layout16</item>
    </style>

    <style name="RightSort">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/day_night</item>
        <item name="android:layout_marginBottom">@dimen/padding_for_layout16</item>
    </style>

    <style name="Med14W400dn">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/day_night</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/day_night</item>
    </style>
</resources>