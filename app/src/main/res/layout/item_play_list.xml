<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/correction_padding4"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    card_view:cardElevation="0dp"
    card_view:cardCornerRadius="@dimen/zero">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/playlist_image"
        android:layout_width="@dimen/image_playlist160"
        android:layout_height="@dimen/image_playlist160"
        android:src="@drawable/placeholder_ap"
        />

    <TextView
        android:id="@+id/name_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/correction_padding4"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="@dimen/text_size_12"
        android:textFontWeight="400"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/day_night"
        tools:text="Best Songs"
        />

        <TextView
            android:id="@+id/amount_tracks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_regular"
            android:textSize="@dimen/text_size_12"
            android:textFontWeight="400"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/day_night"
            tools:text="95 треков"

            />

    </LinearLayout>
</androidx.cardview.widget.CardView>