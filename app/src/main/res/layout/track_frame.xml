<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/padding_for_layout"
    android:layout_marginVertical="@dimen/standart_padding">
    <ImageView
        android:id="@+id/image_artist"
        android:layout_width="@dimen/avtor_image"
        android:layout_height="@dimen/avtor_image"
        tools:src="@color/black"
        android:layout_gravity="center"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="@dimen/standart_padding">
    <TextView
        android:id="@+id/track_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="16sp"
        android:textColor="@color/day_night"
        android:textFontWeight="400"
        tools:text="@string/app_name" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artist_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/ys_display_regular"
                android:textFontWeight="400"
                android:maxLines="1"
                android:textSize="12sp"
                android:textColor="@color/YP_Text_Gray"
                android:ellipsize="end"
                tools:text="@string/app_name" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/point" />

            <TextView
                android:id="@+id/track_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/ys_display_regular"
                android:textFontWeight="400"
                android:maxLines="1"
                android:textSize="12sp"
                android:textColor="@color/YP_Text_Gray"
                android:ellipsize="end"
                tools:text="2:55" />

            

    </LinearLayout>
</LinearLayout>

    <ImageView
        android:id="@+id/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/go"
        android:layout_gravity="end|center_vertical"
        />

</LinearLayout>