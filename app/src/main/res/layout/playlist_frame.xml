<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/padding_for_layout16"
    android:layout_marginVertical="@dimen/standart_padding8"
    android:background="@color/navigate_panel_bg">

    <ImageView
        android:id="@+id/image_playlist"
        android:layout_width="@dimen/avtor_image"
        android:layout_height="@dimen/avtor_image"
        android:layout_gravity="center"
        tools:src="@color/black"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/standart_padding8">

        <TextView
            android:id="@+id/playlist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/ys_display_regular"
            android:textSize="16sp"
            android:textColor="@color/day_night"
            android:textFontWeight="400"
            tools:text="@string/app_name" />

            <TextView
                android:id="@+id/amount_tracks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ys_display_regular"
                android:textFontWeight="400"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="12sp"
                android:textColor="@color/YP_Text_Gray"
                tools:text="@string/app_name"
                />
    </LinearLayout>

    </LinearLayout>

