<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"

        style="@style/HeadBox"
        android:padding="@dimen/padding_for_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/primary_text_size"
            android:fontFamily="@font/ys_display_medium"
            android:textFontWeight="500"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                style="@style/MenuButtons"
                android:id="@+id/searchButton"
                android:layout_marginVertical="@dimen/standart_padding"
                android:text="@string/button_search"
                app:icon="@drawable/search"

                />

            <com.google.android.material.button.MaterialButton
                style="@style/MenuButtons"
                android:id="@+id/libraryButton"
                android:layout_marginVertical="@dimen/standart_padding"
                android:text="@string/button_media_library"
                app:icon="@drawable/tracks"
               />

            <com.google.android.material.button.MaterialButton
                style="@style/MenuButtons"
                android:id="@+id/settingsButton"
                android:textAllCaps="false"
                android:layout_marginVertical="@dimen/standart_padding"
                android:text="@string/button_setting"
                app:icon="@drawable/set"

                />
        </LinearLayout>

    </LinearLayout>
