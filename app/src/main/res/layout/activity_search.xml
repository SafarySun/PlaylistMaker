<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/padding_for_layout"
    android:orientation="vertical"
    tools:context=".SearchActivity">


    <LinearLayout style="@style/ToolbarBox">

        <ImageView
            android:id="@+id/backButton"
            style="@style/ToolbarBack"
            android:src="@drawable/back" />

        <TextView
            style="@style/ToolbarTitle"
            android:text="@string/button_search" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_for_layout"
        android:background="@drawable/search_frame"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/standart_padding"
            android:src="@drawable/search"
            app:tint="@color/black" />

        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/button_search"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="@dimen/standart_padding"
            android:src="@drawable/clean_line"
            android:visibility="gone"
            app:tint="@color/black" />
    </LinearLayout>
</LinearLayout>