<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout style="@style/ToolbarBox">

        <ImageView
            android:id="@+id/backButton"
            style="@style/ToolbarBack"
            android:src="@drawable/back" />

        <TextView
            style="@style/ToolbarTitle"
            android:text="@string/button_media_library" />
    </LinearLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/padding_for_layout"
        android:background="@color/white"
        app:tabTextColor="@color/day_night"
        app:tabRippleColor="@color/black"
        app:tabTextAppearance="@style/MyCustomTextAppearance"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"/>
</LinearLayout>